{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "composite": true,
    "allowJs": true,
    "outDir": "../build/examples",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["*.ts"],
  "exclude": ["**/node_modules", "**/build"]
}
