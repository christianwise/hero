{
  "extends": "@ulixee/repo-tools/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "noImplicitOverride": true,
  },
  "references": [
    {
      "path": "plugins/default-browser-emulator/injected-scripts/tsconfig.json",
    },
  ],
  "include": ["**/*.ts", "**/*.js", "**/*.json", ".eslintrc.js"],
